<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/public_head" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="82px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:background="@color/order_derails_background"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="74px"
            android:layout_marginTop="78px"
            android:text="梅州小吃(亚运村)"
            android:textColor="@color/black"
            android:textSize="40px" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="154px"
            android:layout_marginTop="82px"
            android:text="下单时间:2017-7-31  21:30"
            android:textColor="@color/black"
            android:textSize="37px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="154px"
            android:layout_marginTop="40px"
            android:text="订单号:1545555555555555"
            android:textColor="@color/black"
            android:textSize="37px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="154px"
            android:layout_marginTop="50px"
            android:text="用餐类型:食堂"
            android:textColor="@color/black"
            android:layout_marginBottom="78px"
            android:textSize="38px" />


    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="38px"
        android:background="@color/order_derails_background">

        <ListView
            android:id="@+id/lv_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="74px"
            android:layout_marginTop="82px"
            android:divider="@color/background_grey"
            android:dividerHeight="0px"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lv_order"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="84px"
            android:layout_marginRight="114px"
            android:textSize="38px"
            android:textColor="@color/black"
            android:text="实付款:$333" />


    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoLinearLayout>