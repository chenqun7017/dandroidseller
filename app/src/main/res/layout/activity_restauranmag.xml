<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/public_head" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_marginTop="50px"
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_centerInParent="true"
        app:layout_auto_basewidth="height"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/sss"
        app:civ_border_color="@color/white"
        app:civ_border_width="0px" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70px"
        android:layout_marginTop="82px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:enabled="false"
            android:text="餐厅名称:"
            android:textColor="@color/cyan"
            android:textSize="45px" />

        <EditText
            android:id="@+id/et_aestaurant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:background="@null"
            android:enabled="false"
            android:text="湄洲小吃(国奥村店)"
            android:textColor="@color/cyan"
            android:textSize="45px" />

    </com.zhy.autolayout.AutoLinearLayout>


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="30px"
        android:background="@color/grey_line" />


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70px"
        android:layout_marginTop="74px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:enabled="false"
            android:text="餐厅地址:"
            android:textColor="@color/black"
            android:textSize="40px" />

        <EditText
            android:id="@+id/et_aestaurant_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:background="@null"
            android:enabled="false"
            android:text="北京朝阳区九龙山大郊亭18号"
            android:textColor="@color/black"
            android:textSize="40px" />

    </com.zhy.autolayout.AutoLinearLayout>


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70px"
        android:layout_marginTop="54px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:enabled="false"
            android:text="联系电话:"
            android:textColor="@color/black"
            android:textSize="40px" />

        <EditText
            android:id="@+id/et_aestaurant_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:background="@null"
            android:enabled="false"
            android:text="010-158251565"
            android:textColor="@color/black"
            android:textSize="40px" />

    </com.zhy.autolayout.AutoLinearLayout>


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70px"
        android:layout_marginTop="54px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:enabled="false"
            android:text="营业时间:"
            android:textColor="@color/black"
            android:textSize="40px" />

        <EditText
            android:id="@+id/et_aestaurant_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:background="@null"
            android:enabled="false"
            android:text="20:00-24:00"
            android:textColor="@color/black"
            android:textSize="40px" />

    </com.zhy.autolayout.AutoLinearLayout>


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="50px"
        android:background="@color/grey_line" />


    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="280px"
        android:layout_marginTop="50px"
        android:background="@color/menu_grey"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_shoptype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70px"
            android:layout_marginTop="40px"
            android:text="餐厅类型:"
            android:textColor="@color/register_grey"
            android:textSize="40px" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30px"
            android:layout_toRightOf="@+id/tv_shoptype"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/check_coffee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawablePadding="10px"
                android:drawableRight="@drawable/checkbox_style"
                android:paddingBottom="35px"
                android:paddingRight="35px"
                android:paddingTop="35px"
                android:text="咖啡厅"
                android:textColor="@color/register_grey"
                android:textSize="40px"
                app:layout_auto_basewidth="height" />

            <CheckBox
                android:id="@+id/check_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:button="@null"
                android:drawablePadding="10px"
                android:drawableRight="@drawable/checkbox_style"
                android:paddingBottom="35px"
                android:paddingRight="35px"
                android:paddingTop="35px"
                android:text="快餐"
                android:textColor="@color/register_grey"
                android:textSize="40px"
                app:layout_auto_basewidth="height" />

            <CheckBox
                android:id="@+id/check_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:button="@null"
                android:drawablePadding="10px"
                android:drawableRight="@drawable/checkbox_style"
                android:paddingBottom="35px"
                android:paddingRight="35px"
                android:paddingTop="35px"
                android:text="水吧"
                android:textColor="@color/register_grey"
                android:textSize="40px"
                app:layout_auto_basewidth="height" />


            <CheckBox
                android:id="@+id/check_repast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:button="@null"
                android:drawablePadding="10px"
                android:drawableRight="@drawable/checkbox_style"
                android:paddingBottom="35px"
                android:paddingRight="35px"
                android:paddingTop="35px"
                android:text="餐饮"
                android:textColor="@color/register_grey"
                android:textSize="40px"
                app:layout_auto_basewidth="height" />


        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoRelativeLayout>

    <ImageButton
        android:id="@+id/btn_editor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60px"
        android:background="@drawable/editor_nor" />


</com.zhy.autolayout.AutoLinearLayout>