<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="270px"
        android:layout_height="326px">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="162px"
            android:layout_height="162px"
            app:layout_auto_basewidth="height"
            android:layout_centerInParent="true"
            android:src="@drawable/sss"
            app:civ_border_color="@color/white"
            app:civ_border_width="0px" />
    </com.zhy.autolayout.AutoRelativeLayout>


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="326px"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_marginTop="76px"
            android:text="下单时间:46521233"
            android:lines="1"
            android:textColor="@color/register_grey"
            android:textSize="35px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          android:layout_marginTop="36px"
            android:text="订单号:46521233444"
            android:lines="1"
            android:textColor="@color/register_grey"
            android:textSize="35px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36px"
            android:text="实付款:  333"
            android:lines="1"
            android:textColor="@color/black"
            android:textSize="35px" />


    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="326px"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="35px"
            android:layout_marginTop="76px"
            android:text="食堂"
            android:textColor="@color/hot_yellow"
            android:textSize="38px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="35px"
            android:layout_marginTop="40px"
            android:text="已收款"
            android:textColor="@color/hot_yellow"
            android:textSize="38px" />

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>